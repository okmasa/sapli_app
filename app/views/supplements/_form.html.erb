<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @supplement, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "サプリ名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%# <%= f.label :score, "スコア（１〜５点）" %>
      <%# <%= f.number_field :score, min: 0, max: 5 %>

      <%= f.label :img, "画像" %>
      <%= f.file_field :img , accept: "image/jpeg,image/gif,image/png", class: 'form-control' %>

      <%= f.label :description, "説明" %>
      <%= f.text_area :description, class: 'form-control', size: "10x5" %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $("#supplement_img").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("ファイルサイズは5MB以下にして下さい");
      $("#supplement_img").val("");
    }
  });
</script>