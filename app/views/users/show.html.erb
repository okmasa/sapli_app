<%= provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user-img">
        <%= render 'shared/user_img' %>
      </section>
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <% if @feed_items.any? %>
        <h3>フィード</h3>
        <ol class="microposts">
          <%= render 'shared/feed' %>
        </ol>
        <%= will_paginate @feed_items %>
      <% end %>
    </div>
  </div>
</div>