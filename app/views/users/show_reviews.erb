<% provide(:title, @title) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user-img">
        <%= render 'shared/user_img' %>
      </section>
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8" style="margin-top: -10px">
      <h3><%= @user.name %>の<%= @title %>（<%= @user.reviews.count %>）</h3>
      <span><%= link_to "サプリリストへ", supplements_path %></span>
      <% if @reviews.any? %>
        <ul class="reviews">
          <%= render @reviews %>
        </ul>
        <%= will_paginate @reviews%>
      <% end %>
    </div>
  </div>
</div>